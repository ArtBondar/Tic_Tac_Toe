<Window x:Class="WPF_ADO_Game_Exam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ADO_Game_Exam"
        mc:Ignorable="d"
        Title="SingUp" Height="250" Width="250">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
        <TextBox x:Name="Reg_Login" Text="Login" Margin="0 50 0 0" Width="125" TextAlignment="Center"/>
        <TextBox x:Name="Reg_Password" Text="Password" Margin="0 10 0 0" Width="125" TextAlignment="Center"/>
        <Button x:Name="Reg_Sing" Content="Sing Up" Margin="0 10 0 0" Click="Reg_Sing_Click"/>
        <Button x:Name="Reg_Reg" Content="Registered" Margin="0 10 0 0" Click="Reg_Reg_Click"/>
        <Label Name="exeption" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
